    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.5"
